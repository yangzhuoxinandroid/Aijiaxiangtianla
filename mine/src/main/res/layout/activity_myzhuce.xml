<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mine.MyzhuceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/beijin_lv"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="25dp"
            android:id="@+id/img_back_icon"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:gravity="center"
            android:text="用户注册"
            android:textColor="@color/ziti_bai"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <TextView
            android:id="@+id/txt_register_phone_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="8.0"
            android:gravity="center_vertical"
            android:text="手机号码:"
            android:textColor="@android:color/black"
            android:textSize="16.0dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3.0"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edt_register_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@+id/layout_register_send_code"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="11位手机号码"
                android:inputType="number"
                android:paddingLeft="10.0dip"
                android:textSize="16.0dip" />

            <LinearLayout
                android:id="@+id/layout_register_send_code"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_register_send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_small_green"
                    android:text="获取验证码"
                    android:textColor="@android:color/white"
                    android:textSize="16.0dip" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="1.0dip"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="8.0"
            android:gravity="center_vertical"
            android:text="手机验证码:"
            android:textColor="@android:color/black"
            android:textSize="16.0dip" />

        <EditText
            android:id="@+id/edt_register_phone_code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3.0"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="10.0dip"
            android:textSize="16.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="1.0dip"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="8.0"
            android:gravity="center_vertical"
            android:text="密码:"
            android:textColor="@android:color/black"
            android:textSize="16.0dip" />

        <EditText
            android:id="@+id/edt_register_password"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3.0"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="6位密码"
            android:inputType="textPassword"
            android:paddingLeft="10.0dip"
            android:textSize="16.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="1.0dip"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="8.0"
            android:gravity="center_vertical"
            android:text="确认密码:"
            android:textColor="@android:color/black"
            android:textSize="16.0dip" />

        <EditText
            android:id="@+id/edt_register_ensure_password"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3.0"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="10.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_agreement"
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"

            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="已阅读并同意"
            android:layout_marginLeft="5dp"
            android:textSize="16.0dip" />
        <TextView
            android:id="@+id/btn_agreement_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="《服务条款》"
            android:textColor="@color/ziti_lv"
            android:textSize="16.0dip" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/btn_large_green"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textSize="16.0dip" />
</LinearLayout>
</LinearLayout>
