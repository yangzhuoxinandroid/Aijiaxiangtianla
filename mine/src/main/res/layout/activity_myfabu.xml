<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mine.MyfabuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/beijin_lv"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/fabu_img_back"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fabu_myfabu"
            android:textColor="@color/ziti_bai"
            android:textSize="22dp" />
        <LinearLayout
            android:id="@+id/fabu_ll_shenhe"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@color/beijin_lv"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fabu_tv_shenhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fabu_yishenghe"
                android:textColor="@color/ziti_bai"
                android:textSize="20dp" />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="25dp"
                android:clickable="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/buttom_icon" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/fabu_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
