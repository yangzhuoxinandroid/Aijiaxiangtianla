<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context=".Wode.MyyhzlActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/beijin_lv"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/yhzl_back"
            android:layout_width="12dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:gravity="center"
            android:text="用户资料"
            android:textColor="@color/ziti_bai"
            android:textSize="22dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ziti_bai"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:id="@+id/yhzl_xiugaituxiang"
        android:onClick="MyOnclick"
        android:background="@color/beijin_lv"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/mrtx_pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="点击修改图像"
            android:textColor="@color/ziti_bai"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_my_fragment_login_right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ziti_bai"
        android:clickable="true"
        android:onClick="MyOnclick"
        android:id="@+id/yhzl_yhmc"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名称"
            android:textColor="@color/ziti_hei"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/yhzl_yhmc_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/wode_wodefabu"
            android:textColor="@color/ziti_hui"
            android:gravity="right"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/img_my_fragment_title_right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ziti_bai"
        android:clickable="true"
        android:onClick="MyOnclick"
        android:id="@+id/yhzl_lxfs"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textColor="@color/ziti_hei"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/yhzl_lxfs_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="13618490105"
            android:textColor="@color/ziti_hui"
            android:gravity="right"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/img_my_fragment_title_right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ziti_bai"
        android:clickable="true"
        android:onClick="MyOnclick"
        android:id="@+id/yhzl_lxdz"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系地址"
            android:textColor="@color/ziti_hei"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/yhzl_lxdz_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="湖南"
            android:textColor="@color/ziti_hui"
            android:gravity="right"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/img_my_fragment_title_right" />
    </LinearLayout>
</LinearLayout>
