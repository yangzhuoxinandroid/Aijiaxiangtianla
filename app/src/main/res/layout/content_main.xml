<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
     <LinearLayout
         android:id="@+id/bottom_host"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:layout_weight="1"
         android:orientation="vertical"
         >
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
<RadioGroup
    android:onClick="click"
    android:id="@+id/rg_radiogroup"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
       <RadioButton
           android:id="@+id/main"
           android:layout_weight="1"
           android:button="@null"
           android:textColor="@drawable/text_color"
           android:background="@null"
           android:drawableTop="@drawable/color"
           android:gravity="center_horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/shouye" />
            <RadioButton
                android:id="@+id/publish"
                android:layout_weight="1"
                android:button="@null"
                android:background="@null"
                android:textColor="@drawable/text_color"
                android:drawableTop="@drawable/color2"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fabu" />
            <RadioButton
                android:id="@+id/mine"
                android:layout_weight="1"
                android:button="@null"
                android:background="@null"
                android:textColor="@drawable/text_color"
                android:drawableTop="@drawable/color3"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wode" />
</RadioGroup>
    </LinearLayout>


</LinearLayout>
